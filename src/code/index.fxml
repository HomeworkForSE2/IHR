<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<GridPane fx:controller="code.indexController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" vgap="50" styleClass="root">
    <gridLinesVisible>true</gridLinesVisible>
    <padding>
        <Insets bottom="10" top="10" left="10" right="10"/>
    </padding>
    <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER" spacing="10">
        <Text text="意" />
        <Text text="居"/>
    </HBox>
    <HBox GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER">
        <Text text="人，诗意地栖居"/>
    </HBox>
    <HBox GridPane.rowIndex="2" GridPane.columnIndex="0" alignment="CENTER" spacing="50">
        <ImageView onMouseClicked="#toLogin">
            <Image url="@/pic/loginBtn.png" />
        </ImageView>
        <ImageView onMouseClicked="#toSignUp">
            <Image url="@/pic/signUpBtn.png" />
        </ImageView>
    </HBox>
    <stylesheets>
        <URL value="@/stylesheets/index.css"/>
    </stylesheets>
</GridPane>